upstream grapher-dev {
  server grapher-dev:8080;
}

upstream grapher-api-dev {
  server grapher-api-dev:8080;
}

server {
  listen 8080;

  location / {
    proxy_pass  http://grapher-dev;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
  }

  location /sockjs-node {
    proxy_pass http://grapher-dev;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;
  }

  location /api {
    rewrite ^/api/(.*)$ /$1 break;
    proxy_pass  http://grapher-api-dev;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
  }
}
