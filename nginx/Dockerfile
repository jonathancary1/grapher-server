FROM node:alpine
WORKDIR /app/
COPY ./grapher/package.json ./grapher/package-lock.json ./
RUN npm install
COPY ./grapher/ ./
RUN npm run build

FROM nginx:alpine
COPY --from=0 /app/dist/ /usr/share/nginx/html/
COPY ./nginx/default.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
EXPOSE 443
CMD nginx -g "daemon off;"
